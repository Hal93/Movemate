<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/listgoallayout"
    android:background="@drawable/orangebg">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#ff2a2a2a"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:src="@drawable/logo3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Previous Goals"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:id="@+id/goalList" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="Go Back"
        android:id="@+id/backButton"
        android:onClick="clickBckButton"
        android:background="@drawable/backbuttonlayout"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>
