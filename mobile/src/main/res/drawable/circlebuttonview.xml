<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid
                android:color="#378503"
                />
            <size
                android:width="120dp"
                android:height="120dp"/>
        </shape>

    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#94C900"
                android:endColor="#94C900"
                android:angle="270" />
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>
</selector>